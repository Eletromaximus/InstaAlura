{
	"compilerOptions": {
		"target": "es5",
		"lib": ["dom", "dom.iterable", "esnext","es5"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"types":["cypress"],
		"baseUrl": ".",
		"paths": {
			"@components/*": ["./src/components/*"],
			"@infra/*": ["./src/infra/*"],
			"@services/*": ["./src/services/*"],
			"@theme/*": ["./src/theme/*"],
			"@hooks/*": ["./src/hooks/*"]
		}
	},
	"include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "jest.config.js", "config/redirects.test.js", "jest.setup.js", "src/components/patterns/FormLogin/FormLogin.test.js", "next.config.js"],
	"exclude": ["node_modules"]
}
